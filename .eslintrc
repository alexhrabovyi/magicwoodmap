{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "rules": {
    "linebreak-style": "off",
    "import/extensions": "off",
    "no-new": "off",
    "class-methods-use-this": "off",
    "no-shadow": "off",
    "no-restricted-syntax": "off"
  },
  "ignorePatterns": [
    "dist",
    "webpack.config.js"
  ]
}